<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout 
       android:id="@+id/linear_parking_information_arriving"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background = "#E94509"
       android:orientation="horizontal">
    <TextView 
        android:id="@+id/tv_parking_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="@string/parkingName"
        android:textSize="25sp"/>
      <TextView 
        android:id="@+id/tv_parking_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/parkingNumber"
        android:textSize="15sp"/>
</LinearLayout>
       <TextView
        android:id="@+id/tv_parking_information_title_arriving"
        android:layout_below="@+id/linear_parking_information_arriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"
        android:text="@string/parkingInformationTitleArriving"
        android:textSize="20sp"
        android:textColor="@color/orange"/>
         <LinearLayout 
         android:id="@+id/linear_license_information_arriving"
         android:layout_below="@+id/tv_parking_information_title_arriving"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
           <TextView 
            android:id="@+id/tv_license_plate_number_title_arriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:text="@string/licensePlateNumberTitle"/>
          <TextView 
            android:id="@+id/tv_license_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout 
         android:id="@+id/linear_car_type_arriving"
         android:layout_below="@+id/linear_license_information_arriving"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_car_type_title_arriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left"
            android:text="@string/carTypeTitleArriving"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"/>
<!--        <Spinner
            android:id="@+id/sp_car_type"
            android:background="#EBEBEB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:entries="@array/carTypeArray"/>-->
        </LinearLayout>
        <LinearLayout 
         android:id="@+id/linear_park_type_arriving"
         android:layout_below="@+id/linear_car_type_arriving"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
          <TextView
            android:id="@+id/tv_parking_type_title_arriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left"
            android:text="@string/parkingTypeTitleArriving"
            android:textSize="15sp"/>
         <Spinner 
            android:id="@+id/sp_parking_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:entries="@array/parkingTypeArray"
            android:background="@drawable/edittext_background"/>
         </LinearLayout>
         <LinearLayout 
         android:id="@+id/linear_location_number_arriving"
         android:layout_below="@+id/linear_park_type_arriving"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
           <TextView
            android:id="@+id/tv_parking_location_title_arriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left"
            android:text="@string/parkingLocationTitleArriving"
            android:textSize="15sp"/>
           <EditText
             android:id="@+id/et_parking_location"
             android:layout_width="60sp"
             android:layout_height="wrap_content"
             android:textSize="15sp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingTop="3dp"
             android:paddingBottom="3dp"
             android:cursorVisible="false"
             android:background="@drawable/edittext_background"/>
<!--           <Spinner
            android:id="@+id/sp_parking_location"
            android:layout_width="wrap_content"
            android:background="#EBEBEB"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:entries="@array/parkingLocationArray"/>-->
         </LinearLayout>
    <TextView 
        android:id="@+id/tv_start_time_arriving"
        android:layout_below="@+id/linear_location_number_arriving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"/>
     <!-- <LinearLayout 
         android:id="@+id/linear_photo_arriving"
         android:layout_below="@+id/tv_start_time_arriving"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">
           <TextView
            android:id="@+id/tv_photo_title_arriving"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:text="@string/photoTitleArriving"
            android:textSize="15sp"/>
          <ImageView android:id="@+id/iv_photo_arriving" 
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="50dp" 
            android:layout_height="50dp"/>  
        </LinearLayout> -->
        <LinearLayout
            android:id="@+id/linear_photo_arriving"
            android:layout_below="@+id/tv_start_time_arriving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_photo_title_arriving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="left"
                android:text="@string/photoTitleArriving"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView 
                    android:id="@+id/iv_photo_first_arriving" 
                    android:src="@drawable/ic_photo_background_64px"
                    android:layout_width="50dp" 
                    android:layout_height="50dp"
                    android:padding="3dp"
                    android:clickable="true"/>
<!--                 <ImageView 
                     android:id="@+id/iv_photo_second_arriving" 
                     android:src="@drawable/ic_photo_background_64px"
                     android:layout_width="50dp" 
                     android:layout_height="50dp"
                     android:padding="3dp"
                     android:clickable="true"/> -->
            </LinearLayout>
       </LinearLayout>
        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="bottom"
          android:layout_alignParentBottom="true"
          android:orientation="horizontal">
            <Button 
              android:id="@+id/bt_confirm_arriving"
              android:background = "@drawable/ic_ok"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="@string/ok" />
            <Button 
              android:id="@+id/bt_camera_arriving"
              android:background = "@drawable/ic_ok"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="@string/camera" />
        </LinearLayout>
</RelativeLayout>