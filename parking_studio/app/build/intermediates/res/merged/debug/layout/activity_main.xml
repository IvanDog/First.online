<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#E94509"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView 
       android:id="@+id/tv_park_number"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:gravity="left"
       android:textColor="@color/white" />
     <TextView 
       android:id="@+id/tv_user_number"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1" 
       android:gravity="center"
       android:textColor="@color/white" />
     <TextView 
       android:id="@+id/tv_user_time"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
       android:layout_weight="1" 
       android:gravity="right"
       android:textColor="@color/white" />
</LinearLayout>
<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background = "#FFFFFF"
        android:stretchColumns="*"
        android:weightSum="3" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_arriving"
                android:drawableLeft="@drawable/ic_car_arriving"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/arrivingButton"/>  
            <Button
                android:id="@+id/bt_leaving"
                android:drawableLeft="@drawable/ic_car_leaving"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/leavingButton" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_parking_space"
                android:drawableLeft="@drawable/ic_parking_space_management"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/parkingSpaceButton"/>
             <Button
                android:id="@+id/bt_history_search"
                android:drawableLeft="@drawable/ic_history_search"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/button4"/>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <Button
                android:id="@+id/bt_work_attendance"
                android:drawableLeft="@drawable/ic_work_attendance"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/button5"/>
            <Button
                android:id="@+id/bt_user_account"
                android:drawableLeft="@drawable/ic_user_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/button6" />
        </TableRow>
    </TableLayout>
</LinearLayout>