<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_record_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/tv_licensePlateNumber_record_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#EBEBEB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/orange"/>
  <LinearLayout 
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:gravity="center"
      android:orientation="vertical" >
        <TextView 
        android:id="@+id/tv_startTime_record_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"/>
        <TextView 
        android:id="@+id/tv_leaveTime_record_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"/>
 </LinearLayout>
 <TextView 
    android:id="@+id/tv_parking_location_record_history"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:background="#EBEBEB"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:gravity="center"
    android:textSize="12sp"/>
 <TextView 
    android:id="@+id/tv_payment_bill_record_history"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:background="#EBEBEB"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:gravity="center"
    android:textSize="12sp"/>
</LinearLayout>