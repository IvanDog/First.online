<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >
         <TextView
             android:id="@+id/tv_search_title_histroy"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:text="@string/dateTitle">
         </TextView>
<!--           <Spinner 
            android:id="@+id/sp_history_Date_history"
            android:background="#EBEBEB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:entries="@array/historyDateArray"/> -->
          <TextView
              android:id="@+id/tv_display_date"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:clickable="true"
              android:text="123456"/>
          <Button
             android:id="@+id/bt_search_history"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:text="@string/search" />
     </LinearLayout>
     
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background = "#E94509"
      android:orientation="horizontal" >
      <TextView
       android:id="@+id/tv_payment_state_unfinished_history"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="@string/payment_state_unfinished"
       android:textSize="12sp"
       android:textColor="@color/white" />
      <TextView
       android:id="@+id/tv_payment_state_finished_mobile_history"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="@string/payment_state_finished_mobile"
       android:textSize="12sp"
       android:textColor="@color/white"  />
      <TextView
       android:id="@+id/tv_payment_state_finished_cash_history"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="@string/payment_state_finished_cash"
       android:textSize="12sp"
       android:textColor="@color/white"  />
     <TextView
       android:id="@+id/tv_payment_state_finished_account_history"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="@string/payment_state_finished_account"
       android:textSize="12sp"
       android:textColor="@color/white"  />
     <TextView
       android:id="@+id/tv_payment_state_unfinished_leave_history"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="@string/payment_state_unfinished_leave"
       android:textSize="12sp"
       android:textColor="@color/white"  />
    </LinearLayout>

    <FrameLayout  
        android:id="@+id/history_payment_container"  
        android:background = "#EBEBEB"
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  /> 
</LinearLayout>